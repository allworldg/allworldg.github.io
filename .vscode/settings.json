{
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[toml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.associations": {
        "*.css": "tailwindcss",
        "*.md": "markdown"
    },
    "files.autoSave": "afterDelay"
}
